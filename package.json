{
  "name": "subtitle-ssa-styler",
  "version": "0.1.0",
  "description": "A module which generates style formatting headings for SSA/SubStationAlpha/ASS/Aegisub subtitles",
  "main": "index.js",
  "scripts": {
    "test": "mocha --reporter spec",
    "test:watch": "mocha --reporter spec --watch",
    "start": "node src/index.js",
    "lint": "eslint -c .eslintrc.js --quiet src/* test/*",
    "build": "WEBPACK_ENV=build webpack",
    "coverage": "nyc npm test",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "ssa",
    "subtitles",
    "ass",
    "aegisub",
    "substation",
    "alpha",
    "styles"
  ],
  "author": "padraigf (https://github.com/padraigfl)",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-mocha": "^5.0.0",
    "mocha": "^5.0.5",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^11.6.0",
    "pre-commit": "^1.2.2",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14"
  },
  "dependencies": {
    "rgba-convert": "^0.3.0"
  },
  "pre-commit": [
    "test",
    "lint"
  ]
}
